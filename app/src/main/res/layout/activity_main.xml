<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/instagram_logo"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_heart" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/story_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/user_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
         />

    <TextView
        android:id="@+id/text_story_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerita Anda"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/story_1"
        app:layout_constraintTop_toBottomOf="@+id/story_1"
        />


    <ImageView
        android:id="@+id/story_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/asset_story"
        app:layout_constraintStart_toEndOf="@+id/story_1"
        app:layout_constraintTop_toTopOf="@+id/story_1"
        />

    <TextView
        android:id="@+id/text_story_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASSETS"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/story_2"
        app:layout_constraintTop_toBottomOf="@+id/story_2"
        />
    <ImageView
        android:id="@+id/story_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/liga_story"
        app:layout_constraintStart_toEndOf="@+id/story_2"
        app:layout_constraintTop_toTopOf="@+id/story_2"
        />

    <TextView
        android:id="@+id/text_story_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liga"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/story_3"
        app:layout_constraintTop_toBottomOf="@+id/story_3"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/story_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/asset_story"
        app:layout_constraintStart_toEndOf="@+id/story_3"
        app:layout_constraintTop_toTopOf="@+id/story_3"
        />

    <TextView
        android:id="@+id/text_story_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASSETS"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/story_4"
        app:layout_constraintTop_toBottomOf="@+id/story_4"
        />
    <ImageView
        android:id="@+id/story_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/liga_story"
        app:layout_constraintStart_toEndOf="@+id/story_4"
        app:layout_constraintTop_toTopOf="@+id/story_2"
        />

    <TextView
        android:id="@+id/text_story_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liga"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/story_5"
        app:layout_constraintTop_toBottomOf="@+id/story_3"
        android:layout_marginLeft="15dp"
        />


        <ImageView
            android:id="@+id/profile_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fufufafa_pp"
            android:layout_margin="20dp"
            android:paddingTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/text_story_1"
            app:layout_constraintTop_toBottomOf="@+id/text_story_1"/>

        <TextView
            android:id="@+id/text_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_constraintTop_toBottomOf="@+id/profile_1"
            android:layout_marginStart="68dp"
            android:text="fufufafa"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/profile_1"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/text_profil_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="putra mulyono"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="b"
            app:layout_constraintStart_toStartOf="@+id/text_profil"
            app:layout_constraintTop_toBottomOf="@+id/text_profil"
            />

        <ImageView
            android:id="@+id/post_1"
            android:layout_width="375dp"
            android:layout_height="320dp"
            android:src="@drawable/post_fufufafa"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_profil_2"
            tools:layout_editor_absoluteX="10dp" />

        <ImageView
            android:id="@+id/titik_tiga_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="196dp"
            android:src="@drawable/ic_titik_tiga"
            app:layout_constraintStart_toEndOf="@id/text_profil_2"
            tools:layout_editor_absoluteY="209dp" />

        <ImageView
            android:id="@+id/logo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/post_1"
             />
        <ImageView
            android:id="@+id/logo_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/post_1"
            app:layout_constraintStart_toEndOf="@id/logo_2"
            />

        <ImageView
            android:id="@+id/logo_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/post_1"
            app:layout_constraintStart_toEndOf="@id/logo_3"
            />

        <ImageView
            android:id="@+id/logo_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark"
            android:layout_marginTop="15dp"
            android:paddingLeft="250dp"
            app:layout_constraintTop_toBottomOf="@id/post_1"
            app:layout_constraintStart_toEndOf="@id/logo_4"
            />

        <TextView
            android:id="@+id/text_post_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disukai oleh Ikhwan_hanif"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/logo_2"
            />

        <TextView
            android:id="@+id/text_post_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fufufafa"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_post_1"




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/logo_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_home"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/logo_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


</androidx.constraintlayout.widget.ConstraintLayout>